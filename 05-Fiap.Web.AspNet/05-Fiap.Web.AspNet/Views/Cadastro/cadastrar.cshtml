@model Zoo

@{
    ViewData["Title"] = "cadastrar";
}

<h1>cadastrar</h1>

<div class="form-row">
    <form asp-action="Cadastrar" asp-controller="Cadastro">
        <div class="form-group">
            <label asp-for="Jaulas"></label>
            <input asp-for="Jaulas" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="DataAbertura"></label>
            <input asp-for="DataAbertura" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="EntidadeAdministradora"></label>
            <select asp-for="EntidadeAdministradora" class="form-control" asp-items="@Html.GetEnumSelectList<Tipo>()">
                <option>Selecione</option>
            </select>

        </div>

        <input type="submit" class="btn btn-outline-dark" value="OK" />     
        <a asp-controller="Zoo" asp-action="Listar" class="btn btn-outline-dark">Listar</a>    

    </form>
</div>
