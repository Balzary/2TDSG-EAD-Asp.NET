@model Corrida

@{
    ViewData["Title"] = "cadastrar";
}

@{
    Layout = "_Layout";
}


<h1>Cadastrar</h1>

<div class="form-row">
    <form asp-action="Cadastrar" asp-controller="Cadastro">
        <div class="form-group">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Distancia"></label>
            <input asp-for="Distancia" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Premiacao"></label>
            <input asp-for="Premiacao" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Categoria"></label>
            <select asp-for="Categoria" class="form-control" asp-items="@Html.GetEnumSelectList<Categoria>()">
                <option>Selecione</option>
            </select>
        </div>
        <botao></botao>

    </form>
</div>